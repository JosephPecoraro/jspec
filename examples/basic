
describe 'Shopping Cart'
  
  before_each
    .cart = new ShoppingCart
  end
  
  it 'should add products'
    .cart.add('cookie')
    .cart.products.should_have_length 1
  end

  it 'should randomly add promotional items'
    .cart.addPromotionalItems()
    .cart.products.should_have_length_within 0..2
  end
  
end