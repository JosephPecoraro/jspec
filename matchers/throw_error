function(){ foo() }.should.throw_error
function(){ foo() }.should.throw_error 'oh noes!'

// With alternative closure syntax 

-{ foo() }.should.throw_error
-{ foo() }.should.throw_error 'oh noes!'
-{ throw new TypeError('foo bar') }.should.throw_error TypeError, 'foo bar'
-{ throw new TypeError('foo bar') }.should.throw_error TypeError, /bar/
